resources:
  - name: {{ env["name"] }}
    type: compute.v1.instance
    properties:
      zone: us-east1-b
      machineType: https://www.googleapis.com/compute/v1/projects/volt-k8s/zones/us-east1-b/machineTypes/n1-standard-8
      disks:
      - deviceName: boot
        type: PERSISTENT
        boot: true
        autoDelete: true
        initializeParams:
          sourceImage: https://www.googleapis.com/compute/v1/projects/ubuntu-os-cloud/global/images/family/ubuntu-1810
          diskSizeGb: 16
      networkInterfaces:      
        - network: https://www.googleapis.com/compute/v1/projects/volt-k8s/global/networks/default
        # Access Config required to give the instance a public IP address
          accessConfigs:
          - name: External NAT
            type: ONE_TO_ONE_NAT
      metadata:
        items:
        - key: startup-script
          value: |
            #! /bin/bash
            sudo su -
            cd /root
            echo never > "/sys/kernel/mm/transparent_hugepage/enabled"
            sudo apt-get update
            sudo apt-get -y install redis-server
            sudo service redis-server stop
            
            {% for n in range(10) %}
            {% set port = n+7000 %}
            mkdir {{port}}
            cd {{port}}
            echo 'bind {{ env["name"] }}
            port {{port}}
            cluster-enabled yes
            cluster-config-file nodes.conf
            cluster-node-timeout 5000
            appendonly yes
            ' > redis.conf
            cd ..
            {% endfor %}
            
            {% for n in range(10) %}
            {% set port = n+7000 %} 
            cd {{port}}
            redis-server redis.conf &
            cd ..
            {% endfor %}

            EOF 
